{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\{[^}]*$|^\\s*(?:case\\b.*:|default\\s*:)(?://.*)?$",
    "decreaseIndentPattern": "^\\s*\\}",
    "unIndentedLinePattern": "^\\s*(?://.*|/\\*.*\\*/\\s*)$"
  },
"onEnterRules": [
  {
    "beforeText": "^.*(?:\\{|\\[|\\()\\s*(?://.*)?$",
    "action": { "indent": "indent" }
  },
  {
    "beforeText": "^.*:\\s*(?://.*)?$",
    "action": { "indent": "indent" }
  }
]
}
